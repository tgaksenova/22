<Page x:Class="crd.PropertiesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:crd"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="Aqua"
      Title="PropertiesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Список объектов недвижимости" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,10" />

        <DataGrid x:Name="dataGrid1"  Margin="0,54,0,108" Grid.Row="1" ItemsSource="{Binding Properties}" />
    </Grid>
</Page>
